{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server-Side (Next.js)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      }
    },
    {
      "name": "Debug Client-Side (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 2
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack (Server + Client)",
      "configurations": ["Debug Server-Side (Next.js)", "Debug Client-Side (Chrome)"],
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 3
      }
    }
  ]
}